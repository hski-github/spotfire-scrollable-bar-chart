{
    "apiVersion": "1.1",
    "version": "1.0",
    "name": "Scrollable Bar Chart",
    "id": "spotfire-scrollable-bar-chart-hski",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "sortByValue",
            "type": "boolean",
            "defaultValue": "false"
        }, 
        {
            "name": "showPercentage",
            "type": "boolean",
            "defaultValue": "false"
        }, 
        {
            "name": "showValue",
            "type": "boolean",
            "defaultValue": "true"
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Category",
                "mode": "categorical",
                "placement": "left",
                "dropTarget": {
                    "icon": "Column",
                    "description": "Use {0} as Category for Scrollable Bar Chart"
                }
            },
            {
                "name": "Value",
                "mode": "continuous",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis",
                    "description": "Use {0} as Value for Scrollable Bar Chart"
                }                
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "main.js"
    ]
}